if theme.aside.card_tags.enable
  if site.tags.length
    .card-widget.card-tags
      .item-headline
        i.fas.fa-tags
        span= _p('aside.card_tags')
        
      details#tags-det
        summary 展开

        - let { limit, orderby, order } = theme.aside.card_tags
        - limit = limit === 0 ? 0 : limit || 40
        
        .card-tag-cloud!= cloudTags({source: site.tags, orderby: orderby, order: order, minfontsize: 1.15, maxfontsize: 1.45, limit: limit, unit: 'em', fixSize: true, randomColor: theme.aside.card_tags.color})
